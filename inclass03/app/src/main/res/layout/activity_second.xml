<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <ImageView
        android:id="@+id/iv_avatarf1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="29dp"
        android:contentDescription=""
        app:srcCompat="@drawable/avatar_f_1" />

    <ImageView
        android:id="@+id/iv_avatarf2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/iv_avatarf1"
        android:layout_marginTop="202dp"
        android:contentDescription=""
        app:srcCompat="@drawable/avatar_f_2" />

    <ImageView
        android:id="@+id/iv_avatarf3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/iv_avatarf1"
        android:layout_marginBottom="80dp"
        android:contentDescription=""
        app:srcCompat="@drawable/avatar_f_3" />

    <ImageView
        android:id="@+id/iv_avatarm1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/iv_avatarf1"
        android:layout_marginEnd="38dp"
        android:contentDescription=""
        app:srcCompat="@drawable/avatar_m_1" />

    <ImageView
        android:id="@+id/iv_avatarm2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/iv_avatarm1"
        android:layout_alignTop="@+id/iv_avatarf2"
        android:contentDescription=""
        app:srcCompat="@drawable/avatar_m_2" />

    <ImageView
        android:id="@+id/iv_avatarm3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/iv_avatarm1"
        android:layout_alignTop="@+id/iv_avatarf3"
        android:contentDescription=""
        app:srcCompat="@drawable/avatar_m_3" />
</RelativeLayout>